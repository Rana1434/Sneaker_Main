@model SneakerDAL.Shoes

@{
    ViewData["Title"] = "AddShoe";
}

<h1>AddShoe</h1>

<h4>Shoes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddShoe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="shoeId" class="control-label"></label>
                <input asp-for="shoeId" class="form-control" />
                <span asp-validation-for="shoeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shoePrice" class="control-label"></label>
                <input asp-for="shoePrice" class="form-control" />
                <span asp-validation-for="shoePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shoeStyle" class="control-label"></label>
                <input asp-for="shoeStyle" class="form-control" />
                <span asp-validation-for="shoeStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shoeName" class="control-label"></label>
                <input asp-for="shoeName" class="form-control" />
                <span asp-validation-for="shoeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shoeColor" class="control-label"></label>
                <input asp-for="shoeColor" class="form-control" />
                <span asp-validation-for="shoeColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shoeSize" class="control-label"></label>
                <input asp-for="shoeSize" class="form-control" />
                <span asp-validation-for="shoeSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetShoes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
